<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <div class="task">
    <p>
      <%= check_box(:task, :completed, {checked: task.completed}) %>
      <%= link_to task.title, task_path(task) %>
    </p>
    <%= link_to 'edit', edit_task_path(task) %>
    <%= link_to 'delete', task_path(task), 
      method: :delete, 
      data: {confirm: "Are you sure?"} %>
  </div>
  
<% end %>

<%= link_to 'New task', new_task_path %>
  
