<h1>My Tasks</h1>

<ul class="my-3 mx-0 p-0">
  <% @tasks.each do |task| %>
    <li class="task d-flex align-items-center border border border-primary rounded px-3 my-2">

      <%= check_box(:task, :completed, {checked: task.completed}) %>

      <p class="flex-grow-1 m-0 p-3">
        <%= link_to task.title, task_path(task) %>
      </p>

      <div class="icon">
        <%= link_to edit_task_path(task) do %>
          <%= fa_icon "edit" %>
        <% end %>
      </div>
      
      <div class="icon">
        <%= link_to task_path(task), method: :delete, data: {confirm: "Are you sure?"} do %>
          <%= fa_icon "trash" %>
        <% end %>
      </div>

    </li>
  <% end %>
</ul>

<div class="btn btn-primary">
  <%= link_to 'New task', new_task_path, class: 'btn btn-primary' %>
</div>
  
